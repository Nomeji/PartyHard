<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="amaury.test1.RechercherSoiree">



<GridLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="center_horizontal"
android:layout_marginBottom="35dp">

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Recherche"
    android:id="@+id/Recherche"
    android:layout_row="0"
    android:layout_column="0"
    android:singleLine="true" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Créer"
    android:id="@+id/Creer"
    android:layout_row="0"
    android:layout_column="1" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Mes évènements"
    android:id="@+id/events"
    android:layout_row="0"
    android:layout_column="2" />

</GridLayout>

<GridLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="left"
android:layout_marginBottom="35dp">

<CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="soirée"
    android:id="@+id/optSoiree"
    android:layout_row="0"
    android:layout_column="0"
    android:checked="false" />

<CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="concert"
    android:id="@+id/optConcert"
    android:layout_row="1"
    android:layout_column="0"
    android:checked="false" />

<CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="sortie"
    android:id="@+id/optSortie"
    android:layout_row="2"
    android:layout_column="0"
    android:checked="false" />
</GridLayout>

<GridLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="center_horizontal"
android:layout_marginBottom="35dp">

<CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="gratuit"
    android:id="@+id/optGratuit"
    android:layout_row="0"
    android:layout_column="0"
    android:checked="false"
    android:layout_gravity="center" />
</GridLayout>

<GridLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical"
android:layout_gravity="center_horizontal">

<Spinner
    android:layout_width="113dp"
    android:layout_height="wrap_content"
    android:id="@+id/spinJour"
    android:layout_row="0"
    android:layout_column="0"
    android:entries="@array/jour_arrays"/>

<Spinner
    android:layout_width="108dp"
    android:layout_height="wrap_content"
    android:id="@+id/spinMois"
    android:layout_row="0"
    android:layout_column="1"
    android:entries="@array/mois_arrays"/>

<Spinner
    android:layout_width="116dp"
    android:layout_height="wrap_content"
    android:id="@+id/spinAnnee"
    android:layout_row="0"
    android:layout_column="2"
    android:entries="@array/annee_arrays"/>
</GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="65dp">

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:id="@+id/submit"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:onClick="OnClickRechercherSoiree" />

</LinearLayout>